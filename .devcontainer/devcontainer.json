// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:9.0-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {},
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "9.0",
			"additionalVersions": "8.0",
			"workloads": "aspire, wasm-tools"
		},
		"ghcr.io/devcontainers/features/python:1": {},
		//TODO: Uncomment the following line to use the Java feature with a non-broken version.
		//"ghcr.io/devcontainers/features/java:1": {},
		"ghcr.io/azure/azure-dev/azd:0": {}
	},
	"postCreateCommand": [
		"dotnet dev-certs https --trust"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"GitHub.copilot",
				"ms-python.pylint",
				"mike-lischke.vscode-antlr4"
			]
		}
	},
	"secrets": {
		//TODO: update this section to define all keys.
		"apiKey" : {
			"description": "Used to authenticate with the OpenAPI service."
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [17105, 15229],
	"portsAttributes": {
			"17105": {
				"protocol": "http"
			},
			"15229": {
				"protocol": "https"
			}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
